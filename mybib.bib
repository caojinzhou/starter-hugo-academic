@phdthesis{li_planning_2015,
	type = {Ph.{D}.},
	title = {Planning for land-use and transportation alternatives : towards household activity-based urban modeling for sustainable futures},
	copyright = {http://dspace.mit.edu/handle/1721.1/7582},
