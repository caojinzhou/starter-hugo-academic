	keywords = {??, built environment, ??, ??/???, ????, ????, ????, ??????, agglomeration/urbanisation, development, economic processes, economic transition, mega city region, planning, \#nosource},
	pages = {636--654},
}

@article{chong_understanding_2020,
	title = {Understanding the structure and determinants of city network through intra-firm service relationships: {The} case of {Guangdong}-{Hong} {Kong}-{Macao} {Greater} {Bay} {Area}},
