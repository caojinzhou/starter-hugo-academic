	keywords = {Computer Science - Computers and Society, Computer Science - Machine Learning, Statistics - Machine Learning},
	file = {arXiv.org Snapshot:/Users/jinzhoucao/Zotero/storage/FSRWRR8S/1905.html:text/html;Kempinska_Murcio-2019-Modelling urban networks using Variational Autoencoders-arXiv1905.06465 [cs, stat].pdf:C\:\\Users\\Jinzhou Cao\\Documents\\zotero-file\\2019-arXiv1905.06465 [cs, stat]\\Kempinska_Murcio-2019-Modelling urban networks using Variational Autoencoders-arXiv1905.06465 [cs, stat].pdf:application/pdf},
