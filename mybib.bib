	author = {Liu, Xiaobing and Yan, Xuedong and Wang, Wei and Titheridge, Helena and Wang, Rui and Liu, Yang},
	month = feb,
	year = {2021},
	keywords = {Commuting, Beijing Metropolitan Region, Carpooling, Functional boundary, Polycentric spatial structure},
